{% extends 'layout.twig' %}

{% block body %}
<div class="container">
    <div class="titulo">
        <h1>{{title}}</h1>
    </div>
    <div class="menu">
        <table id="tabla">
            <thead>
                <tr>
                    <th>Comprar</th>
                    <th>Pizzas</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th colspan="3">Clásicas</th>
                </tr>
                {% for pizza in pizzas %}
                    {% if pizza.tipo == 'clásicas' %}
                        {% include "shared/renderPizza.twig" %}
                    {% endif %}
                {% endfor %}
                <tr>
                    <th colspan="3">Especiales</th>
                </tr>
                {% for pizza in pizzas %}
                    {% if pizza.tipo == 'especiales' %}
                        {% include "shared/renderPizza.twig" %}
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="calculo">
        <span class="total">
            Total: $ <span id="total">0.00</span>
        </span>
    </div>
</div>
{% endblock %}