{% extends 'layout.twig' %}

{% block body %}
<div class="container">
    <div class="auth-nav">
        <div class="button">
        {% if user %}
            <a href="/logout">{{user.username}}</a>
        {% else %}
            <a href="/login">Ingresar</a>
            <a href="/register">Registrarse</a>
        {% endif %}
        </div>
    </div>

{% include "shared/titulo.twig" %}
    <div class="menu">
        <table id="tabla">
            <thead>
                <tr>
                    <th>Comprar</th>
                    <th>Pizzas</th>
                    <th>Precio</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="calculo">
        <span class="total">
            Total: $ <span id="total">0.00</span>
        </span>
    </div>
</div>
{% endblock %}